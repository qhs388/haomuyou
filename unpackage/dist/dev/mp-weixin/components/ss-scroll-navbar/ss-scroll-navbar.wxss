.ss-scroll-navbar {
  width: 100%;
  height: 118rpx;
  background-color: #fff;
  white-space: nowrap;
}
.ss-scroll-navbar .nav-item {
  height: 90rpx;
  text-align: center;
  width: 222rpx;
  display: inline-block;
  position: relative;
  font-size: 30rpx;
}
.ss-scroll-navbar .nav-item .content {
  color: #282828;
  background-color: #efc58f;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  box-sizing: border-box;
}
.ss-scroll-navbar .nav-item .content .title {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}
.ss-scroll-navbar .nav-item .content .state {
  font-size: 24rpx;
  line-height: 51rpx;
  text-align: center;
}
.ss-scroll-navbar .current .content {
  width: 100%;
  height: upx;
  color: #fff !important;
  background-color: #ff1f44 !important;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  box-sizing: border-box;
}
.ss-scroll-navbar .current .content .title {
  text-align: center;
}
.ss-scroll-navbar .current .content .state {
  text-align: center;
}
.ss-scroll-navbar .current:after {
  content: '';
  width: 0;
  height: 0;
  border-top: 15rpx solid #ff1f44;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}

