.ss-navbar {
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  background-color: #fff;
  border-radius: 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.ss-navbar .nav-item {
  height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #303133;
  position: relative;
}
.ss-navbar .nav-item:after {
  content: '';
  width: 0;
  height: 0;
  border-bottom: 4rpx solid #E34819;
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.ss-navbar .current {
  color: #282828;
  font-weight: 700;
}
.ss-navbar .current:after {
  width: 50%;
}

